<div class="sl_show">
	<p>
		<b><%=t(:title,scope:[:activerecord,:attributes,:notice]) %></b>
		<%= @admin_notice.title %>
	</p>
	<p>
  	<b><%=t(:content,scope:[:activerecord,:attributes,:notice_content]) %></b>
		<%= simple_format(@admin_notice.notice_content.content) %>
	</p>
	<p>
  	<b><%=t(:label_count) %></b>
  	<%=@admin_notice.count+@admin_notice.impressionist_count(:filter=>:ip_address) %>
  </p>
	<p>
		<b><%=t(:enable,scope:[:activerecord,:attributes,:notice]) %></b>
		<%=raw flagToString(@admin_notice.enable) %>
	</p>
	<p>
  	<b><%=t(:label_created_at) %></b>
  	<%= @admin_notice.created_at %>
  </p>
  <p>
  	<b><%=t(:label_updated_at) %></b>
  	<%= @admin_notice.created_at %>
  </p>
</div>
<% if can? :update, @admin_notice %>
<%= link_to t(:link_edit), edit_admin_notice_path(@admin_notice) %> |
<% end %>
<%= link_to t(:link_list), admin_notices_path %>
