<% breadcrumb :portfolio, @portfolio %>
<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section id="sl_portfolio_show">
  <div class="slboard_content">
    <div class="sl_content_header">
      <h3><%= @portfolio.title %></h3>
      <p>작성일 : <%= @portfolio.created_at %></p>
    </div>
    <div class="sl_content_main">
      <div class="sl_content_text">
        <div class="sl_content_text"><%= simple_format(@portfolio.portfolio_content.content) %></div>
      </div>
    </div>
  </div>
  <div id="sl_content_bottom_menu">
    <%= link_to t(:link_list),portfolios_path %>
    <% if can? :update, Portfolio %>
    &nbsp; | &nbsp; <%= link_to t(:link_edit), edit_portfolio_path(@portfolio),:rel=>"nofollow" %>
    <% end %>
    <% if can? :delete, Portfolio %>
    &nbsp; | &nbsp; <%= link_to t(:link_delete), @portfolio, method: :delete, data: { confirm: t(:delete_confirm) },:rel=>"nofollow" %>
    <% end %>
  </div>
</section>
