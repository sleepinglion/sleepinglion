<%= form_for @intro_photo, :html => {:multipart => true,:class=>'form-horizontal'} do |f| %>
<% if @intro_photo.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@intro_photo.errors.count, "error") %> prohibited this gallery from being saved:</h2>
	<ul>
		<% @intro_photo.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<%= f.label :title,:class=>'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.text_field :title,:class=>'form-control',:required=>'required' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :photo,:class=>'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<% if @intro_photo.photo? %>
		<%= image_tag(@intro_photo.photo.small_thumb) %>
		<% end %>
		<%= f.file_field :photo %>
		<%= f.hidden_field :photo_cache %>
	</div>
</div>
<div class="form-group actions">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit :class=>"btn btn-primary" %>
	</div>
</div>
<% end %>
