<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => {:class=>'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
<div class="form-group">
	<%= f.label :email,:for=>"user_email",:class=>"col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.email_field :email, :class=>"form-control",:required=>'required' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :name,:for=>"user_name",:class=>"col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.text_field :name, :class=>"form-control",:required=>'required' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :password,:for=>"user_password",:class=>"col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.password_field :password, :class=>"form-control",:required=>'required' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :password_confirmation,:for=>"user_password_confirmation",:class=>"col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.password_field :password_confirmation, :class=>"form-control",:required=>'required' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :photo,:for=>"user_photo",:class=>"col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.file_field :photo %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit '회원가입',:class=>'btn btn-primary' %>
	</div>
</div>
<% end %>

<%= render "devise/shared/links" %>
