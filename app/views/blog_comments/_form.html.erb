<section id="sl_blog_comment_new" class="box">
		<div class="box_header">
			<h2>댓글 쓰기</h2>
			<div class="box_icon">
				<a href="#" class="btn_minimize"><i class="glyphicon glyphicon-chevron-up"></i></a>
				<a href="#" class="btn_close"><i class="glyphicon glyphicon-remove"></i></a>
			</div>
		</div>
		<div class="box_content">		
<%= form_for([@blog, @blog_comment]) do |f| %>
	<% if user_signed_in? %>
	<div class="form-group">
		<% if current_user.photo? %>
		<%= image_tag current_user.photo.small_thumb,:alt=>current_user.name %>
		<% end %>
		<%=current_user.name %>
	</div>
 	<% else %>
	<div class="form-group">
		<%= f.label :name %><br />
		<%= f.text_field :name,{:class=>'sl_input', :class=>'form-control',:required=>'required'} %>
	</div>
	<div class="form-group">
 		<%= f.label :password %><br />
 		<%= f.password_field :password,{:class=>'sl_input', :class=>'form-control',:required=>'required'} %>
 	</div> 	
 	<% end %>
 	<div class="form-group">
 		<%= f.label :content %><br />
 		<%= f.text_area :content,{:class=>'sl_input', :class=>'form-control', :required=>'required'} %>
 	</div>
	<% if Rails.env.production? %>
	<% unless user_signed_in? %>
	<div class="form-group">
		<div><%= recaptcha_tags :display => { :theme => "clean" } %></div>
	</div>
	<% end %>
	<% end %>
 	<div class="form-group actions">
	<%= f.submit :class=>"btn btn-primary" %>
 	</div>
<% end %>
	</div>
</section>

