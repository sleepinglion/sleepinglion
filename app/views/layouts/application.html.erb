<!DOCTYPE html>
<html lang="<%=I18n.locale %>">
<head>
	<meta charset="utf-8" />
	<%=display_meta_tags :site => t(:application_name),
	:title=>@title,
	:description => @meta_description,
	:keywords => @meta_keywords,
	:separator => t(:title_separator),
	:viewport => "width=device-width, initial-scale=1.0, user-scalable=no",
	:reverse => true %>
	<%=display_meta_tags og: {
  	title:   @title,
  	description: @meta_description,
  	url:      @meta_url,
  	image:    @meta_image
	}
	%>
	<meta name="author" content="Sleeping-Lion" />
	<link rel="shortcut icon" href="<%=asset_path('favicon.ico') %>" />
	<%= stylesheet_link_tag "application", :media=>"all", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
	<!--[if IE]>
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<![endif]-->
	<!--[if lt IE 9]>
	<script type="text/javascript" src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <script type="text/javascript" src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
    <![endif]-->
</head>
<body>
<%= render :partial => 'layouts/header' %>
	<div id="mom">
		<section id="main" class="container">
			<div class="row">			
				<% if controller.controller_name=='home' %>
				<div class="jumbotron hero-unit">
					<h2><%=raw t(:home_main_title) %></h2>
					<p class="lead"><%=raw t(:home_main_description) %></p>
					<%=link_to '깨끗한 웹을 꿈꾸고 있습니다','/home/popup',:class=>'modal_link btn btn-large btn-success',:'data-toggle'=>"modal",:'data-target'=>"#myModal" %>
				</div>
				<hr class="none">
				<div id="main_main" class="sub_main">
				<% else %>
				<div class="page-header" itemscope itemtype="http://schema.org/WebPage">
					<h2 itemprop="mainContentOfPage" itemscope itemtype="http://schema.org/WebPageElement"><span itemprop="headline"><%=@controller_name %></span></h2>
					<%= breadcrumbs :semantic=>true, style: :bootstrap %>
				</div>
				<div class="sub_main">
				<% end %>
				
				<% unless @menu_setting.nil? %>
				<% if @ad && @menu_setting.ad_position_id==2 %>
				<%= render :partial => 'layouts/ad' %>
				<% end %>
				<% end %>			
				
				<%=yield %>
				
				<% unless	@menu_setting.nil? %>
				<% if @ad && @menu_setting.ad_position_id==3 %>
				<%= render :partial => 'layouts/ad' %>
				<% end %>
				<% end %>
		
				</div>
				<%= render :partial => 'layouts/aside' %>
			</div>
		</section>		
	</div>
<%= render :partial => 'layouts/footer' %>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<%= javascript_include_tag @script, "data-turbolinks-track" => true %>
</body>
</body>
</html>