<!DOCTYPE html>
<html lang="<%=I18n.locale %>">
<head>
  <meta charset="utf-8">
  <title><%=t(:service_name)%></title>
  <meta name="description" content="<%=t(:service_name)%>">
  <meta name="author" content="Sleeping-Lion">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes">
  <%= stylesheet_link_tag "admin/application", :media => "all", "data-turbolinks-track" => true %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <!--[if IE]>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <![endif]-->
</head>
<body>
<%= render :partial => 'layouts/admin/header' %>
<div id="mom">
  <div id="main">
    <div class="sub_main">
      <div id="message-container" class="container">
        <div class="row">
          <div class="col-12">
            <%= render :partial => 'layouts/notice', :locals=>{:notice=>notice,:alert=>alert} %>
          </div>
        </div>
      </div>
      <%= yield %>
    </div>
  </div>
</div>
<%= render :partial => 'layouts/admin/footer' %>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog"></div>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
